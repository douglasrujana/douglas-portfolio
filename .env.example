# LLM Configuration
LLM_PROVIDER=gemini
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Models
GEMINI_CHAT_MODEL=gemini-2.0-flash-lite
GEMINI_BLOG_MODEL=gemini-2.0-flash-lite
GEMINI_DEV_MODEL=gemini-2.5-flash

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=your_bot_username
ENABLE_TELEGRAM=true

# WhatsApp (Optional)
WHATSAPP_NUMBER=593999999999

# Email & CRM (Optional)
RESEND_API_KEY=re_xxxxx
HUBSPOT_API_KEY=pat-xxxxx

# CV & Portfolio URLs (Optional)
CV_PDF_URL=https://your-domain.com/cv.pdf
CALENDLY_URL=https://calendly.com/your-username/30min

# WhatsApp Integration (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
WHATSAPP_NUMBER=
ENABLE_WHATSAPP=false

# Blog Configuration
BLOG_STORAGE=filesystem
BLOG_POSTS_DIR=./src/content/blog/posts

# Social Media Integration (Optional)
LINKEDIN_ACCESS_TOKEN=
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# Deployment & Environment
DEPLOYMENT_TARGET=vercel
NODE_ENV=development
SITE_URL=http://localhost:4321

# Feature Flags
ENABLE_CHATBOT=true
ENABLE_CROSS_POSTING=false

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=10
RATE_LIMIT_WINDOW_MS=60000
