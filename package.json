{
  "name": "douglas-portfolio",
  "version": "1.0.0",
  "description": "Portfolio personal de Douglas Rujana - Arquitectura Hexagonal + Astro + SvelteKit + Gemini AI",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build && astro check",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "lint": "eslint src --ext .ts,.tsx,.astro,.svelte",
    "lint:fix": "eslint src --ext .ts,.tsx,.astro,.svelte --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,astro,svelte,css,md,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,astro,svelte,css,md,json}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "type-check": "tsc --noEmit",
    "bot:telegram": "tsx scripts/start-telegram-bot.ts",
    "bot:test": "tsx tests/telegram/test-bot.ts"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.9",
    "@astrojs/svelte": "^7.2.1",
    "@astrojs/tailwind": "^6.0.0",
    "@google/generative-ai": "^0.24.1",
    "@types/node-telegram-bot-api": "^0.64.12",
    "astro": "^5.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "nanoid": "^5.0.9",
    "node-telegram-bot-api": "^0.66.0",
    "svelte": "^5.0.0",
    "svelte-flag-icons": "^3.0.0",
    "tailwindcss": "^3.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.5",
    "@astrojs/vercel": "^9.0.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/ui": "^4.0.6",
    "eslint": "^9.0.0",
    "eslint-plugin-astro": "^1.0.0",
    "eslint-plugin-svelte": "^2.44.0",
    "prettier": "^3.3.0",
    "prettier-plugin-astro": "^0.14.0",
    "prettier-plugin-svelte": "^3.2.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "keywords": [
    "portfolio",
    "astro",
    "svelte",
    "gemini",
    "ai",
    "hexagonal-architecture",
    "clean-code",
    "typescript"
  ],
  "author": "Douglas Rujana",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
