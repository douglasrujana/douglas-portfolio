---
/**
 * Blog Index Page
 * Lista todos los posts del blog con filtering
 */

import PostCard from '@presentation/components/blog/PostCard.svelte';
import TechBadge from '@presentation/components/ui/TechBadge.svelte';
import Navigation from '@presentation/components/ui/Navigation.svelte';
import ScrollToTop from '@presentation/components/ui/ScrollToTop.simple.svelte';
import CodeBackground from '@presentation/components/ui/CodeBackground.svelte';
import Footer from '@presentation/components/ui/Footer.svelte';
import { env } from '@infrastructure/config/env';
import { getPublishedPosts, getAllTags, getAllCategories } from '../../lib/blog-utils';

// Configuración de navegación
const currentPath = '/blog';

const posts = await getPublishedPosts();
const tags = await getAllTags();
const categories = await getAllCategories();

// Meta
const title = 'Blog - Douglas Rujana';
const description = 'Artículos sobre desarrollo web, arquitectura de software, IA y mejores prácticas. Tutoriales, casos de estudio y opiniones técnicas.';
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <!-- Navegación Principal -->
    <header role="banner">
      <Navigation client:load currentPath={currentPath} />
    </header>
    
    <main>
      <!-- Hero del Blog -->
      <section class="blog-hero" aria-labelledby="blog-heading">
        <!-- Fondo con código -->
        <div class="code-bg-container">
          <CodeBackground client:load />
        </div>
        
        <div class="container-jony">
          <div class="blog-hero-content">
            <div class="branding">
              <span class="domain">douglasrujana.dev</span>
              <h1 id="blog-heading" class="blog-title">
                <span class="title-line">Ideas</span>
                <span class="title-line">Transformadas</span>
                <span class="title-line accent">en Código</span>
              </h1>
              <div class="divider"></div>
              <p class="blog-description">
                Explorando el arte del desarrollo de software a través de artículos técnicos, 
                tutoriales y reflexiones sobre arquitectura, patrones de diseño y mejores prácticas.
              </p>
            </div>
            
            <div class="hero-stats">
              <div class="stat">
                <span class="stat-number">{posts.length}</span>
                <span class="stat-label">Artículos</span>
              </div>
              <div class="stat">
                <span class="stat-number">{categories.length}+</span>
                <span class="stat-label">Categorías</span>
              </div>
              <div class="stat">
                <span class="stat-number">{tags.length}+</span>
                <span class="stat-label">Tecnologías</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="scroll-indicator">
          <span>Explorar artículos</span>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M6 9l6 6 6-6"/>
          </svg>
        </div>
      </section>

    <!-- Filters (sidebar en desktop, acordeón en mobile) -->
    <section class="blog-content">
      <div class="container-jony">
        <div class="blog-layout">
          <!-- Sidebar -->
          <aside class="blog-sidebar">
            <!-- Categories -->
            <div class="sidebar-section">
              <h3 class="sidebar-title">Categorías</h3>
              <div class="category-list">
                {categories.map(({ category, count }) => (
                  <a href={`/blog/category/${category}`} class="category-item">
                    <span class="category-name">{category}</span>
                    <span class="category-count">{count}</span>
                  </a>
                ))}
              </div>
            </div>

            <!-- Popular Tags -->
            <div class="sidebar-section">
              <h3 class="sidebar-title">Tags Populares</h3>
              <div class="tags-cloud">
                {tags.slice(0, 15).map(({ tag, count }) => (
                  <a href={`/blog/tag/${tag}`} class="tag-link">
                    {tag}
                    <span class="tag-count">({count})</span>
                  </a>
                ))}
              </div>
            </div>
          </aside>

          <!-- Posts Grid -->
          <main class="blog-main">
            {posts.length > 0 ? (
              <div class="posts-grid">
                {posts.map((post) => (
                  <PostCard 
                    client:visible 
                    post={post} 
                    featured={post.data.featured}
                  />
                ))}
              </div>
            ) : (
              <div class="empty-state">
                <p>No hay posts publicados aún.</p>
              </div>
            )}
          </main>
        </div>
      </div>
    </section>

    </main>
    
    <!-- Pie de página -->
    <Footer 
      currentYear={new Date().getFullYear()}
      showTechCredits={true}
      socialLinks={{
        github: 'https://github.com/douglasrujana',
        linkedin: 'https://linkedin.com/in/douglasrujana',
        telegram: env.TELEGRAM_BOT_USERNAME ? `https://t.me/${env.TELEGRAM_BOT_USERNAME}` : null,
        whatsapp: env.WHATSAPP_NUMBER ? `https://wa.me/${env.WHATSAPP_NUMBER}?text=Hola%20Douglas,%20vi%20tu%20blog` : null,
        email: 'tu@email.com'
      }}
    />
    
    <!-- Botón de Scroll to Top -->
    <ScrollToTop client:load />
  </body>
</html>

<style is:global>
  @import '../../styles/jony-ive.css';
</style>

<style>
  /* Hero Section */
  .blog-hero {
    position: relative;
    min-height: 85vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    color: white;
    padding: var(--space-3xl) 0;
  }
  
  .code-bg-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0.3;
    z-index: 1;
  }
  
  .blog-hero-content {
    position: relative;
    z-index: 2;
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
    padding: 0 var(--space-md);
  }
  
  .branding {
    margin-bottom: var(--space-2xl);
  }
  
  .domain {
    display: inline-block;
    font-size: 0.9rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: var(--space-md);
    position: relative;
    padding-left: var(--space-md);
  }
  
  .domain::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    width: 8px;
    height: 8px;
    background: var(--color-accent);
    border-radius: 50%;
    transform: translateY(-50%);
  }
  
  .blog-title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 700;
    line-height: 1.1;
    margin: 0 0 var(--space-md);
    letter-spacing: -0.02em;
  }
  
  .title-line {
    display: block;
  }
  
  .title-line.accent {
    color: var(--color-accent);
    position: relative;
    display: inline-block;
  }
  
  .title-line.accent::after {
    content: ';';
    color: var(--color-accent);
    opacity: 0.5;
  }
  
  .divider {
    width: 60px;
    height: 3px;
    background: var(--color-accent);
    margin: var(--space-lg) auto;
    border-radius: 3px;
  }
  
  .blog-description {
    font-size: 1.25rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.8);
    max-width: 700px;
    margin: 0 auto;
  }
  
  .hero-stats {
    display: flex;
    justify-content: center;
    gap: var(--space-2xl);
    margin-top: var(--space-2xl);
    flex-wrap: wrap;
  }
  
  .stat {
    text-align: center;
  }
  
  .stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
    line-height: 1;
    margin-bottom: var(--space-xs);
    background: linear-gradient(135deg, var(--color-accent), #4f46e5);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .stat-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .scroll-indicator {
    position: absolute;
    bottom: var(--space-xl);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.9rem;
    z-index: 2;
    animation: bounce 2s infinite;
  }
  
  .scroll-indicator svg {
    margin-top: var(--space-xs);
    opacity: 0.7;
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0) translateX(-50%);
    }
    40% {
      transform: translateY(-10px) translateX(-50%);
    }
    60% {
      transform: translateY(-5px) translateX(-50%);
    }
  }

  /* Hero */
  .blog-hero {
    padding: var(--space-2xl) 0;
    text-align: center;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 300;
    letter-spacing: -0.02em;
    margin-bottom: var(--space-md);
  }

  .hero-description {
    font-size: clamp(1rem, 2vw, 1.125rem);
    font-weight: 300;
    color: var(--color-gray-600);
    line-height: 1.7;
    max-width: 600px;
    margin: 0 auto var(--space-xl);
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    gap: var(--space-xl);
    flex-wrap: wrap;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xs);
  }

  .stat strong {
    font-size: 2rem;
    font-weight: 300;
    color: var(--color-gray-900);
  }

  .stat span {
    font-size: 0.875rem;
    color: var(--color-gray-500);
  }

  /* Layout */
  .blog-content {
    padding: var(--space-2xl) 0;
  }

  .blog-layout {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: var(--space-2xl);
    align-items: start;
  }

  /* Sidebar */
  .blog-sidebar {
    position: sticky;
    top: calc(var(--space-2xl) + 60px);
  }

  .sidebar-section {
    margin-bottom: var(--space-xl);
  }

  .sidebar-title {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-gray-900);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-md);
  }

  /* Categories */
  .category-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .category-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-sm) var(--space-md);
    border-radius: var(--radius-sm);
    font-size: 0.9375rem;
    color: var(--color-gray-700);
    transition: all var(--transition-base);
  }

  .category-item:hover {
    background: var(--color-gray-100);
    color: var(--color-gray-900);
    transform: translateX(4px);
  }

  .category-count {
    font-size: 0.8125rem;
    color: var(--color-gray-500);
  }

  /* Tags Cloud */
  .tags-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .tag-link {
    font-size: 0.8125rem;
    color: var(--color-gray-600);
    transition: color var(--transition-base);
  }

  .tag-link:hover {
    color: var(--color-accent);
  }

  .tag-count {
    color: var(--color-gray-400);
  }

  /* Posts Grid */
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-lg);
  }

  /* Empty state */
  .empty-state {
    text-align: center;
    padding: var(--space-2xl);
    color: var(--color-gray-500);
  }

  /* Footer */
  .footer {
    padding: var(--space-xl) 0;
    margin-top: var(--space-2xl);
    border-top: 1px solid var(--color-gray-200);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .blog-layout {
      grid-template-columns: 1fr;
    }

    .blog-sidebar {
      position: static;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: var(--space-lg);
    }
  }

  @media (max-width: 768px) {
    .blog-sidebar {
      grid-template-columns: 1fr;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }

    .hero-stats {
      gap: var(--space-lg);
    }
  }
</style>
