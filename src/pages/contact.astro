---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../presentation/components/contact/ContactForm.svelte';

const title = 'Contáctame | Douglas Rujana';
const description = '¿Tienes un proyecto en mente? Envíame un mensaje y hablemos sobre cómo puedo ayudarte.';
---

<BaseLayout title={title} description={description}>
  <main class="container mx-auto px-4 py-16 max-w-4xl">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">Contáctame</h1>
      <p class="text-xl text-gray-600 dark:text-gray-300">
        ¿Tienes un proyecto en mente? Envíame un mensaje y hablemos sobre cómo puedo ayudarte.
      </p>
    </div>
    
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 md:p-8">
      <ContactForm client:load />
    </div>
    
  </main>
</BaseLayout>
